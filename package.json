{
  "name": "transformation",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "./scripts/dev.sh",
    "dev:host": "npx wrangler pages dev ./dist --compatibility-date 2023-02-11 --binding NODE_ENV=development SENDGRID_LOGIN=$SENDGRID_LOGIN TESTING_OVERRIDE_CODE=$TESTING_OVERRIDE_CODE DEBUG=$DEBUG DEBUG_COLORS=1 --do DO_API=DurableAPI@transformation-durable_objects --do GREETER=Greeter@transformation-durable_objects --kv SESSIONS",
    "dev:watch": "npx vite build --watch",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "eslint": "npx eslint -c .eslintrc.cjs --ext .js,.svelte,.html .",
    "lint": "npm run eslint",
    "postinstall-not-needed": "cd durable_objects && npm install",
    "build": "npm run build:version.json && npm run build:ui",
    "build:version.json": "printf '{\"sha\":\"' > ./public/version.json && printf $(git show -s --format=%H) >> ./public/version.json && echo '\"}' >> ./public/version.json",
    "build:ui": "npx vite build",
    "build:durable_objects": "cd durable_objects && npm run build",
    "build:sourcemaps": "npx vite build --config vite-sourcemaps.config.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules vitest --run",
    "test:live": "NODE_OPTIONS=--experimental-vm-modules VITEST_BASE_URL=http://127.0.0.1:8788/api/do vitest --run",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules vitest",
    "coverage": "NODE_OPTIONS=--experimental-vm-modules vitest --coverage",
    "syncpack:fix": "npx syncpack fix-mismatches"
  },
  "devDependencies": {
    "@contrast/contrast": "^1.0.13",
    "@creativebulma/bulma-tooltip": "^1.2.0",
    "@cypress/code-coverage": "^3.10.0",
    "@sveltejs/vite-plugin-svelte": "^2.0.2",
    "@vitest/coverage-c8": "^0.29.2",
    "agnostic-svelte": "^1.1.22",
    "bulma": "^0.9.3",
    "bulma-badge": "^3.0.1",
    "bulmaswatch": "^0.8.1",
    "cypress": "12.6",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-svelte3": "^3.4.1",
    "lerna": "^4.0.0",
    "lighthouse": "^9.5.0",
    "sass": "^1.49.0",
    "snyk": "^1.936.0",
    "svelte-awesome": "^2.4.4",
    "syncpack": "^9.8.4",
    "ttab": "^0.8.0",
    "vite": "^4.1.2",
    "vitest": "^0.29.1",
    "vitest-environment-miniflare": "^2.12.1",
    "wrangler": "^2.11.0"
  },
  "dependencies": {
    "@transformation-dev/accept": "file:packages/accept",
    "@transformation-dev/cloudflare-do-utils": "file:packages/cloudflare-do-utils",
    "@transformation-dev/dragster": "file:packages/dragster",
    "@transformation-dev/svelte-realtime-store": "file:packages/svelte-realtime-store",
    "@transformation-dev/svelte-viewstate-store": "file:packages/svelte-viewstate-store",
    "cbor-x": "^1.5.1",
    "debug": "^4.3.4",
    "nanoid": "^4.0.1",
    "sort-on": "^5.2.0",
    "svelte": "^3.55.1",
    "svelte-spa-router": "^3.3.0"
  },
  "workspaces": [
    "packages/cloudflare-do-utils",
    "packages/cloudflare-do-testing-utils",
    "packages/dragster",
    "packages/accept",
    "durable_objects"
  ]
}
